{
  "name": "moose-player",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Michel Kraemer",
  "description": "A simplistic console music player",
  "license": "Apache-2.0",
  "private": true,
  "engines": {
    "node": ">=10"
  },
  "files": [
    "index.js",
    "ui.js",
    "reindex.js"
  ],
  "keywords": [
    "audio",
    "player",
    "music",
    "terminal",
    "command-line",
    "console",
    "cli",
    "ffmpeg",
    "libav",
    "libsdl2",
    "sdl",
    "sdl2",
    "shell",
    "text",
    "xterm"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/michel-kraemer/moose-player.git"
  },
  "bugs": "https://github.com/michel-kraemer/moose-player/issues",
  "dependencies": {
    "ansi-escapes": "^3.1.0",
    "chalk": "^2.4.1",
    "lunr": "^2.3.3",
    "music-metadata": "^3.1.2",
    "native-player": "./native-player",
    "rmdir": "^1.2.0"
  },
  "scripts": {
    "build": "babel src/ -d lib/",
    "prepublish": "yarn run build",
    "test": "flow && xo src/**.js"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^10.0.1",
    "babel-preset-flow": "^6.23.0",
    "eslint": "^5.7.0",
    "eslint-config-xo-flow": "^0.1.0",
    "eslint-plugin-flowtype": "^3.0.0",
    "flow-bin": "^0.83.0",
    "xo": "^0.23.0"
  },
  "xo": {
    "extends": "xo-flow",
    "rules": {
      "camelcase": [
        "off"
      ],
      "capitalized-comments": [
        "off"
      ],
      "flowtype/newline-after-flow-annotation": [
        "error",
        "always"
      ],
      "flowtype/require-parameter-type": [
        "error",
        {
          "excludeArrowFunctions": true
        }
      ],
      "flowtype/require-return-type": [
        "error",
        "always",
        {
          "excludeArrowFunctions": true
        }
      ],
      "import/order": [
        "error",
        {
          "newlines-between": "always"
        }
      ],
      "no-await-in-loop": "off",
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "quotes": [
        "error",
        "double"
      ]
    },
    "space": true
  }
}
